# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=feedback_db
DB_USER=feedback_user
DB_PASSWORD=secure_password
DATABASE_URL=postgresql://feedback_user:secure_password@localhost:5432/feedback_db

# Redis Configuration (optional - for session management and caching)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secure-256-bit-secret-key-here-change-in-production
SESSION_SECRET=your-session-secret-key-here-change-in-production

# Email Service Configuration (choose one)
# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_LEAD_TEMPLATE_ID=d-your-template-id
SENDGRID_REMINDER_TEMPLATE_ID=d-your-reminder-template-id

# AWS SES (alternative to SendGrid)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Email Settings
FROM_EMAIL=leads@yourcompany.com
COMPANY_NAME=Your Lead Generation Business

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
PRIMARY_COLOR=#3B82F6
LOGO_URL=/assets/logo.png

# Security Settings
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Analytics
ANALYTICS_ENABLED=true
PROMETHEUS_ENABLED=false
LOG_LEVEL=info

# Business Configuration
SCORING_WEIGHTS_INCOME=20
SCORING_WEIGHTS_AGE=15
SCORING_WEIGHTS_URGENCY=25
SCORING_WEIGHTS_WEEKLY_COST=10
SCORING_WEIGHTS_INSURANCE_STATUS=15
SCORING_WEIGHTS_SATISFACTION=8
SCORING_WEIGHTS_ENGAGEMENT=5
SCORING_WEIGHTS_COMPLETION=2